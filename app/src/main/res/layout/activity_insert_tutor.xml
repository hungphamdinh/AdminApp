<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/parentSignUp"
    android:layout_height="match_parent"
    tools:context=".InsertTutorActivity"
    android:gravity="center"
    android:orientation="vertical"
    >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên giảng viên"
        android:id="@+id/edtTutorName"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu"
        android:inputType="number"
        android:id="@+id/edtPasswordTutor"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số điện thoại"
        android:inputType="number"
        android:id="@+id/edtTutorPhone"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:id="@+id/edtTutorMail"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kinh nghiệm"
        android:id="@+id/edtExperience"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Thêm "
        android:id="@+id/btnInsertTutor"
        />
</LinearLayout>